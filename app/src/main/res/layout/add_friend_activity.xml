<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/input_layout">

    <ImageView
        android:id="@+id/friend_photo_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="10"
        android:background="@android:drawable/picture_frame" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/pic_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/friend_photo_result"
                android:background="@drawable/camera"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/take_photo_output"
                android:hint="Take a photo"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_layout"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/birth_date_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/calendar"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/birth_date_output"
                android:textSize="20sp"
                android:hint="Choose birthday"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter your friend name"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/friend_name_input"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter your friend phone number"
        android:inputType="phone"
        android:gravity="center"
        android:id="@+id/friend_phone_input"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter your friend email"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:id="@+id/friend_email_input"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter your friend address"
        android:gravity="center"
        android:id="@+id/friend_address_input"/>

    <CheckBox
        android:id="@+id/friend_checkbox"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/checkbox"
        android:fontFamily="casual"
        android:text=" Is best friend ?"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>